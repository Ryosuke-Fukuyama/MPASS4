<h2><%= t('.forgot_your_password') %></h2>

<%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), html: { method: :post }, local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div><%= f.label :email %></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions') %>
  </div>
<% end %>

<%= render "patients/shared/links" %>
