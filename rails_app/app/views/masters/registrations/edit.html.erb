<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), html: { method: :put }, local: true) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div>
      <%= f.label :name %>
    </div>
      <%= f.text_field :name, placeholder: t('view.placeholder.name'), autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <div><%= f.label :email %></div>
    <%= f.email_field :email, placeholder: "", autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <div><%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i></div>
    <%= f.password_field :password, placeholder: "", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <div><em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em></div>
    <% end %>
  </div>

  <div class="field">
    <div><%= f.label :password_confirmation %></div>
    <%= f.password_field :password_confirmation, placeholder: "", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <div><%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i></div>
    <%= f.password_field :current_password, placeholder: "", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

<%= link_to t('devise.shared.links.back'), :back, class: "button_06", role: "button" %>