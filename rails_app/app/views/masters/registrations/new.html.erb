<h2><%= t('.sign_up') %></h2>

<%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), local: true) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= I18n.t("errors.messages.not_saved", count: 1, resource: resource.class.model_name.human.downcase) %>
      </h2>
    </div>
  <% end %>
  <% if flash[:recaptcha_error].present? %>
    <p class="left-margin"><%= flash[:recaptcha_error] %></p>
  <% end %>

  <%= f.text_field :name, placeholder: t('view.placeholder.name'), autofocus: true, autocomplete: "name" %>

  <%= f.email_field :email, placeholder: "", autocomplete: "email" %>

  <% if @minimum_password_length %>
  <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
  <% end %>
  <%= f.password_field :password, placeholder: "", autocomplete: "new-password" %>

  <%= f.password_field :password_confirmation, placeholder: "", autocomplete: "new-password" %>

  <div><%= recaptcha_tags %></div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "masters/shared/links" %>
