<h3>
  <%= t('view.hospitals') + t('view.new') %>
</h3>

<%= form_with(model: @form, local: true) do |hospital_form| %>

  <div class="field">
    <%= hospital_form.label :name, t('view.hospital') + t('view.name') %>
    <%= hospital_form.text_field :name, placeholder: t('view.must'), autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= hospital_form.label :email, t('view.email') %>
    <%= hospital_form.email_field :email, placeholder: t('view.must'), autocomplete: "email" %>
  </div>

  <div class="field">
    <%= hospital_form.label :tel, t('view.tel') %>
    <%= hospital_form.text_field :tel, placeholder: t('view.must'), autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= hospital_form.label :address, t('view.address') %>
    <%= hospital_form.text_field :address, placeholder: t('view.must'), autocomplete: "address" %>
  </div>

  <div class="field">
    <%= hospital_form.label :access %>
    <%= hospital_form.text_field :access, placeholder: "", autocomplete: "access" %>
  </div>

  <div class="field">
    <%= hospital_form.label :introduction %>
    <%= hospital_form.text_field :introduction, placeholder: "", autocomplete: "introduction" %>
  </div>

  <%
=begin
%>
  <div class="field">
    <%= hospital_form.label :image %>
    <%= image_tag(@hospital.image.url) if @hospital.image && @hospital.image.url %>
    <%= hospital_form.file_field :image, autocomplete: "image" %>
    <%= hospital_form.hidden_field :image_cache %>
  </div>
  <%
=end
%>

  <div class="field">
    <p><%= hospital_form.label :hospital_label %></p>
    <% @hospital_labels.all.each do |label| %>
      <%= hospital_form.check_box :hospital_label_ids, { multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false}, label[:id], "" %>
      <label><%= label.name %></label>
    <% end %>
  </div>

  <div class="field">
    <h4><%= t('admin_staff') + t('view.must') %></h4>
    <%= hospital_form.fields_for :staff do |staff_form| %>

      <div class="field">
        <%=staff_form.label :name, t('view.name') %>
        <%=staff_form.text_field :name, placeholder: "", autocomplete: "name" %>
      </div>

      <div class="field">
        <%=staff_form.label :password, t('view.password') %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <%=staff_form.password_field :password, placeholder: "", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%=staff_form.label :password_confirmation, t('view.password_confirmation') %>
        <%=staff_form.password_field :password_confirmation, placeholder: "", autocomplete: "new-password" %>
      </div>

      <%=staff_form.hidden_field :admin, value: true %>
    <% end %>
  </div>

  <%= hospital_form.submit :submit %>
<% end %>