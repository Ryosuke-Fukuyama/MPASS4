<p align="center" class="logo">MPASS</p>
<ul>
  <li>
    <%= link_to t('view.top'), root_path, id: "global-navi_top", class: "btn btn-outline-info", role: "button"  %>
  </li>
  <li>
    <%= link_to t('view.hospital') + t('view.index'), hospitals_path, id: "global-navi_hospital-index", class: "btn btn-outline-info", role: "button"  %>
  </li>
  <% if patient_signed_in? || staff_signed_in? || master_signed_in? %>
    <% if patient_signed_in? %>
      <li>
        <%= link_to t('view.my_page'), patient_path(current_patient.id), id: "global-navi_patient-show", class: "btn btn-outline-info", role: "button"  %>
      </li>
      <li>
        <%= link_to t('view.favorite'), favorite_hospitals_path, id: "global-navi_favorite-index", class: "btn btn-outline-info", role: "button"  %>
      </li>
      <div class="flex-right">
        <li>
          <%= link_to t('view.sign_out'), destroy_patient_session_path, method: :delete, id: "global-navi_patient-sign-out", class: "btn btn-outline-dark", role: "button" %>
        </li>
      </div>
    <% elsif staff_signed_in? %>
      <li>
        <%= link_to t('view.waiting'), health_interviews_path(@hospital), id: "global-navi_in-house-healthinterview-index", class: "btn btn-outline-info", role: "button" %>
      </li>
      <div class="flex-right">
        <li>
          <%= link_to t('view.sign_out'), destroy_staff_session_path, method: :delete, id: "global-navi_staff-sign-out", class: "btn btn-outline-dark", role: "button" %>
        </li>
      </div>
    <% else %>
      <li>
        <%= link_to t('view.master') + t('view.menu'), master_path(current_master.id), id: "global-navi_new-hospital", class: "btn btn-outline-info", role: "button" %>
      </li>
      <div class="flex-right">
        <li>
          <%= link_to t('view.sign_out'), destroy_master_session_path, method: :delete, id: "global-navi_master-sign-out", class: "btn btn-outline-dark", role: "button" %>
        </li>
      </div>
    <% end %>
  <% else %>
    <div class="flex-right">
      <li>
        <%= link_to t("view.sign_in"), new_patient_session_path, id: "global-navi_sign-in", class: "btn btn-outline-info", role: "button" %>
      </li>
    </div>
    <li>
      <%= link_to t("view.sign_up"), new_patient_registration_path, id: "global-navi_sign-up", class: "btn btn-outline-info", role: "button" %>
    </li>
  <% end %>
</ul>