<% if flash[:recaptcha_error].present? %>
  <p><%= flash[:recaptcha_error] %></p>
<% end %>
<h2><%= t('.sign_in') %></h2>

<%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="email_field">
    <div><%= f.label :email %></div>
    <%= f.email_field :email, placeholder: t('view.placeholder.email'), autofocus: true, autocomplete: "email" %>
  </div>

  <div class="password_field">
    <div><%= f.label :password %></div>
    <%= f.password_field :password, placeholder: t('view.placeholder.password'), autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <%= recaptcha_tags %>

  <div class="actions">
    <%= f.submit t('.sign_in') %>
  </div>
<% end %>

<%= render "patients/shared/links" %>
